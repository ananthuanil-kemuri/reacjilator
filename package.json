{
  "name": "slack-reacjilator",
  "version": "1.1.0",
  "description": "A translation bot for Slack that translates a message when a user reacted with an emoji",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run transpile",
    "clean": "rimraf dist",
    "dev": "nodemon --exec babel-node src/index.js",
    "lint": "npx eslint . --ignore-path .gitignore --fix",
    "prettier": "npx prettier --config package.json --write 'src/**/*.js'",
    "prod": "npm run build && NODE_ENV=production node dist/index.js",
    "test": "yarn jest",
    "testw": "yarn jest --watch",
    "test-only-changed": "yarn jest --onlyChanged",
    "transpile": "babel src --out-dir dist"
  },
  "keywords": [
    "bot",
    "slack",
    "slackbot"
  ],
  "author": "Tomomi Imura",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@google-cloud/translate": "^5.1.3",
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "qs": "^6.7.0",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.5",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@babel/node": "^7.8.7",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**"
    ],
    "ignore": [
      "**/tests/**",
      "dist"
    ]
  },
  "engines": {
    "node": "10.16.3",
    "yarn": "1.21.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn run test-only-changed",
      "pre-push": "npm run prettier && npm test"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
